{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "sourceMap": true,
  "compileOnSave": true,
  "files": [
    "./main.ts",
    "./vendor.ts"
  ],
  "exclude": [
    "node_modules/*",
    "../build/*",
    "../src/*",
    "**/*-aot.ts"
  ]
}
